---
const {name, price, thumbnail, id} = Astro.props;  
---

<a class="product-card" href={`products/${id}`}>
  <div class="product-image" transition:name={`products-${id}`}>
    <img src={thumbnail}  alt={`Image of ${name}`} />
  </div>
  <div class="product-name" transition:name={`products-name-${id}`}>{name}</div>
  <div class="product-price">
    Price: <span style="color: #58c458;">{price}$</span>
  </div>
</a>

<style>
  .product-card {
    width: 48%;
    max-width:200px;
    height: 220px;
    background-color: var(--darker-blue);
    border-radius: 10px;
    position: relative;
    box-shadow: 5px 5px 10px #0000001e;
  }
  .product-image {
    width: 100%;
    height: 130px;
    background-color: #00000050;
    border-radius: 10px 10px 0 0;
    position: relative;
    overflow: hidden;
  }
  .product-image img {
    width: 100%;
    object-fit: cover;
  }
  .product-image::before {
    content: "";
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 100%;
    height: 20px;
    background-color: var(--darker-blue);
    clip-path: polygon(0 0, 100% 100%, 0 100%);
  }
  .product-name {
    padding: 5px;
    color: white;
    text-align: start;
    max-height: 55px;
    overflow: hidden;
  }
  .product-price {
    position: absolute;
    bottom: 5px;
    padding: 10px;
  }
</style>
